        <script><![CDATA[var gr = new GlideRecord('x_cdltd_loaner_req_loaner_request');
var overdueRemindTime = gs.getProperty('x_cdltd_loaner_req.overdue.remindtime', 24) * 60 * 60 * 1000;

var noticeTime = new GlideDateTime();
noticeTime.add(overdueRemindTime);

gr.addQuery('state', 16);
gr.addQuery('overdue_reminder', '');
gr.addQuery('start_date', '<=', noticeTime);
gr.query();

var rightNow = new GlideDateTime();

while (gr.next()) {
    gr.overdue_reminder = rightNow;
    gr.update();
    gs.eventQueue('x_cdltd_loaner_req.reminder', gr, gr.number, gs.getUserName());
}]]></script>
